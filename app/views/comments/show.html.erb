<div class="page-header">
  <h3><%= @comment.title %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @comment.user.present? %>
          <a href="/users/<%= @comment.user_id %>">
            <%= @comment.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Title</dt>
      <dd><%= @comment.title %></dd>

      <dt>Body</dt>
      <dd><%= @comment.body %></dd>

      <dt>Debate</dt>
      <dd>
        <% if @comment.debate.present? %>
          <a href="/debates/<%= @comment.debate_id %>">
            <%= @comment.debate.liburl %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/comments" class="btn btn-primary">
        Back
      </a>
      <a href="/comments/<%= @comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_comment/<%= @comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
