<div class="page-header">
  <h1>
    Elections
    <a href="/elections/new" class="btn btn-lg btn-success">New Election</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actions</th>
      </tr>

      <% @elections.each do |election| %>
      <tr>
        <td>
          <a href="/elections/<%= election.id %>" class="btn btn-primary">Show</a>
          <a href="/elections/<%= election.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_election/<%= election.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @elections, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
