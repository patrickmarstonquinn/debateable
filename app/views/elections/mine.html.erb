<div class="alert alert-dismissible alert-info">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Here's the polling information for <%= @street_address %>.
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Relevant Election</h3>
    </div>
    <div class="panel-body">
      The <%= @electionname %> on <%= @electionday %>.
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Polling Location Name</h3>
    </div>
    <div class="panel-body">
      <%= @name %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Polling Location Address</h3>
    </div>
    <div class="panel-body">
      <%= @line1 %> <%= @city %>, <%= @state %>  <%= @zip %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Polling Location Hours</h3>
    </div>
    <div class="panel-body">
      <p><%= @hours %></p>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">More Info on This Election</h3>
    </div>
    <div class="panel-body">
      <p><a href="<%= @info %>"><%= @info %></a></p>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Register to Vote Here!</h3>
    </div>
    <div class="panel-body">
      <p><a href="<%= @register %>"><%= @register %></a></p>
    </div>
  </div>

  <div class="btn-group btn-group-justified">
    <a href="/elections" class="btn btn-primary">
      Back
    </a>
  </div>
