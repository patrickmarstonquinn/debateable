<div class="page-header">
  <h1>
    Debaters
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <!-- <th>Picture</th> -->
        <th>Name</th>
        <th>Contact Email</th>
        <th>Biography</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <!-- <td><= user.password %></td> -->
        <!-- <td><img src='<= user.picture %>' class='img-responsive'></td> -->
        <td><%= user.bio %></td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>

          <% if current_user == user %>
          <a href="/users/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>

        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
