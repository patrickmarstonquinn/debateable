<div class="page-header">
  <h1>
    Ongoing Debates
    <a href="/debates/new" class="btn btn-lg btn-success">New Debate</a>
  </h1>
</div>

<div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "debates_filters" do |f| %>
    <p class="lead">Narrow results:</p>

    <div class="form-group">
      <%= f.label :liburl_cont, "Liburl contains" %>
      <%= f.text_field :liburl_cont, :class => "form-control", :placeholder => "Liburl contains" %>
    </div>

    <div class="form-group">
      <%= f.label :electionid_cont, "Electionid contains" %>
      <%= f.text_field :electionid_cont, :class => "form-control", :placeholder => "Electionid contains" %>
    </div>

    <div class="form-group">
      <%= f.label :topic_cont, "Topic contains" %>
      <%= f.text_field :topic_cont, :class => "form-control", :placeholder => "Topic contains" %>
    </div>

    <div class="form-group">
      <%= f.label :contitle_cont, "Contitle contains" %>
      <%= f.text_field :contitle_cont, :class => "form-control", :placeholder => "Contitle contains" %>
    </div>

    <div class="form-group">
      <%= f.label :conurl_cont, "Conurl contains" %>
      <%= f.text_field :conurl_cont, :class => "form-control", :placeholder => "Conurl contains" %>
    </div>

    <div class="form-group">
      <%= f.label :libtitle_cont, "Libtitle contains" %>
      <%= f.text_field :libtitle_cont, :class => "form-control", :placeholder => "Libtitle contains" %>
    </div>

    <div class="form-group">
      <%= f.label :created_at, "Created at" %>
      <div class="row">
        <div class='col-md-6 mb-1'>
          <div class='input-group date' id='created_atgteqPicker'>
            <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>

        <div class='col-md-6'>
          <div class='input-group date' id='created_atlteqPicker'>
            <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript">
    $(function () {
      $('#created_atgteqPicker').datetimepicker({
        format: 'YYYY-MM-DD hh:mm:SS'
      });
      $('#created_atlteqPicker').datetimepicker({
        useCurrent: false,
        format: 'YYYY-MM-DD hh:mm:SS'
      });
      $('#created_atgteqPicker').on("dp.change", function (e) {
        $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
      });
      $('#created_atlteqPicker').on("dp.change", function (e) {
        $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
      });
    });
    </script>

    <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

    <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

    <a href="/debates" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#debates_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Topic</th>
        <th>Liberal Take</th>
        <th>Conservative Take</th>
        <th>Added By</th>
        <!-- <th>Electionid</th> -->
        <th>Actions</th>
      </tr>

      <% @debates.each do |debate| %>
      <tr>
        <td><a href="/debates/<%= debate.id %>"><%= debate.topic %></a></td>
        <td><a href="<%= debate.liburl %>"><%= debate.libtitle %></a></td>
        <td><a href="<%= debate.conurl %>"><%= debate.contitle %></a></td>
        <td>
          <% if debate.user.present? %>
          <a href="/users/<%= debate.user.id %>">
            <%= debate.user.name %>
          </a>
          <% end %>
        </td>
        <!-- <td><%= debate.electionid %></td> -->
        <td>
          <a href="/debates/<%= debate.id %>" class="btn btn-primary">Show</a>

          <% if current_user == debate.user %>
          <a href="/debates/<%= debate.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_debate/<%= debate.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @debates, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
